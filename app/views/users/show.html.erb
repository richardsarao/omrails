<!-- app/views/users/show.html.erb -->
<div class="container">

  <div class="row"><!-- row \/-->

      <div class="col-md-4"><!-- col 4 \/ -->
        <div class="card"><!-- card \/ -->
            <div class="card-block">
              <h4 class="card-title"><%= @user.username %></h4>
              <h6 class="card-subtitle text-muted">Support card subtitle</h6>
            </div>
            <img src="..." alt="Card image">
            <div class="card-block">
              <p class="card-text"><%= @user.name %></p> <!-- link added per vid #57-->
              <a href="#" class="card-link">Pins</a>
              <a href="#" class="card-link">Another link</a>
            </div>
          </div><!-- card /\ -->
      </div><!-- col 4 /\ -->
         
     <div class="col-md-8"><!-- col 8 \/ -->
          <ul class="list-group">
            <% @tweets.each do |tweet| %>
                <%= link_to tweet, class: "list-group-item list-group-item-action" do %><!--tweet = tweet_path(tweet) class makes whole line link to show page -->
                    <h5 class="list-group-item-heading"><%= tweet.user.username%></h5>
                    <p class="list-group-item-text"><%= tweet.content %></p>                
                <% end %>         
            <% end %>
          </ul>
      </div><!-- col 8 /\  -->

  </div><!-- row /\ -->

</div>
    
