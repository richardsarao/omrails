<div class="container">
  <h1>List of all Pins</h1>

  <table class="table">
    <thead>
      <tr>
        <th>User Email</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pins.each do |pin| %>
        <tr>
          <td><%= pin.user.username %></td>
          <td><%= pin.content %></td>
          <td><%= link_to 'Show', pin %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
          <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if user_signed_in? %>
      <%= link_to 'New Pin', new_pin_path %>
  <% end %>
</div>